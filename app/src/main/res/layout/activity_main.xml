<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <g12.li21n.poo.isel.pt.snakeandroid.View.Tile.TilePanel
        android:id="@+id/panel"
        android:layout_width="379dp"
        android:layout_height="374dp"
        android:layout_marginTop="64dp"
        app:gridLine="0"
        app:heightTiles="4"
        app:widthTiles="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/mainBoxbackgroundColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/mainBoxbackgroundColor"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="85dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/mainBoxbackgroundColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/panel"
        app:layout_constraintStart_toEndOf="@+id/levelText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="51dp"
        android:layout_height="0dp"
        android:background="@color/mainBoxbackgroundColor"
        android:paddingHorizontal="5dp"
        android:text="@string/score_label"
        android:textColor="@color/boardTextColor"
        android:textSize="@dimen/boardTextSize"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:background="@color/mainBoxbackgroundColor"
        android:paddingHorizontal="5dp"
        android:text="@string/level_label"
        android:textColor="@color/boardTextColor"
        android:textSize="@dimen/boardTextSize"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:background="@color/mainBoxbackgroundColor"
        android:paddingHorizontal="5dp"
        android:text="@string/apples_label"
        android:textColor="@color/boardTextColor"
        android:textSize="@dimen/boardTextSize"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|center"
        android:text="000"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.4"
        tools:text="000" />

    <TextView
        android:id="@+id/levelText"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|center"
        android:text="0"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.333"
        tools:text="0" />

    <TextView
        android:id="@+id/appleText"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|center"
        android:text="0"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.333"
        tools:text="0" />

    <TextView
        android:id="@+id/userInfoTextId"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:minWidth="@dimen/minUserInfoW"
        android:minHeight="@dimen/minUserInfoH"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel" />

    <Button
        android:id="@+id/okButtonId"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="OK"
        app:layout_constraintStart_toEndOf="@+id/userInfoTextId"
        app:layout_constraintTop_toBottomOf="@+id/panel" />


</android.support.constraint.ConstraintLayout>